[Unit]
Description=Service for controlling opensearch-benchmark
Wants=network.target
Requires=network.target

[Service]
EnvironmentFile=-/etc/environment
Environment=PYTHONPATH={{ charm_root }}/lib:{{ charm_root }}/venv:{{ charm_root }}/src/benchmark/wrapper
ExecStart={{ charm_root }}/src/benchmark/wrapper/main.py --test_name={{ test_name }} --command={{ command }} --workload={{ workload_name }} --threads={{ threads }} --parallel_processes={{ parallel_processes }} --duration={{ duration }} --target_hosts={{ target_hosts }} --extra_labels={{ labels }} {{ extra_config }}
Restart=no
TimeoutSec=600
Type=simple
