[Unit]
Description=Service for controlling opensearch-benchmark
Wants=network.target
Requires=network.target

[Service]
EnvironmentFile=-/etc/environment
Environment=PYTHONPATH={{ charm_root }}/lib:{{ charm_root }}/venv:{{ charm_root }}/src/benchmark/wrapper
ExecStart={{ charm_root }}/src/benchmark/wrapper/main.py --command={{ command }} --workload={{ workload }} --threads={{ threads }} --clients={{ clients }} --duration={{ duration }} --workload_params={{ workload_params }} --extra_labels={{ extra_labels }} {{ extra_config }}
Restart=no
TimeoutSec=600
Type=simple
