summary: Kafka benchmark pebble layer
description: Pebble config layer for the Kafka benchmark service
services:
    dpe-benchmark:
        override: merge
        summary: Kafka benchmark service
        command: {{ charm_root }}/src/wrapper.py --test_name={{ test_name }} --command={{ command }} --is_coordinator={{ is_coordinator }} --workload={{ workload_name }} --threads={{ threads }} --parallel_processes={{ parallel_processes }} --duration={{ duration }} --peers={{ peers }} --extra_labels={{ labels }} {{ extra_config }}
        startup: enabled
        environment: 
            PYTHONPATH: {{ charm_root }}/lib:{{ charm_root }}/venv:{{ charm_root }}/src/benchmark/wrapper

